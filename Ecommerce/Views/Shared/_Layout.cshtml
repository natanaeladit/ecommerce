<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title E-commerce</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        @Html.ActionLink("E-commerce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link basket">
                        <span>Your Basket: </span><span>@ViewBag.CartUnits</span>
                        <table>
                            @foreach (var c in ViewBag.Cart)
                            {
                                <tr><td>@c.Quantity x @String.Format("{0:c}", c.UnitPrice)</td><td>@c.ProductName</td></tr>
                            }
                            <tr>
                                <td>Total: @String.Format("{0:c}", ViewBag.CartTotalPrice)</td>
                                <td>@Html.ActionLink("Check Out", "Index", "Checkout")</td>
                            </tr>
                        </table>
                    </a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year - E-commerce</p>
    </footer>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/vendor/holder.min.js"></script>
</body>
</html>