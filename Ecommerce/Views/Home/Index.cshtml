@using System.Collections.Generic;
@model IEnumerable<Ecommerce.DomainModels.Product>
@{
    ViewBag.Title = "Home Page";
}
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @if (Model.Count() < 1)
            {
                <br />
                <div class="alert alert-info">
                    <strong>Welcome!</strong> Our shop is currently empty.
                </div>
            }
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="holder.js/100px50?theme=thumb&bg=55595c&fg=eceeef&text=@item.Name" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @Html.ActionLink("Add to cart", "AddToCart", "Home", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-secondary", @onclick= "disableElm(this);" })
                                    <button type="button" class="btn btn-sm btn-outline-secondary">$ @item.Price</button>
                                </div>
                                <small class="text-muted">
                                    @item.StockQty @if (item.StockQty > 1)
                                    {
                                        <text>units</text>
                                    }
                                    else
                                    {
                                        <text>unit</text>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    function disableElm(elm) {
        elm.disabled = true;
    }
</script>